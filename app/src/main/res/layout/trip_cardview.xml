<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <include layout="@layout/headline_trip"></include>
            <RelativeLayout
                android:id="@+id/counterActionTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headlineBaseTrip"
                android:padding="@dimen/space_elements">
                <TextView
                    android:id="@+id/counterLikesTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondaryText"
                    android:text="2k likes"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/counterSavedTrips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/space_elements"
                    android:layout_toEndOf="@+id/counterLikesTrip"
                    android:layout_toRightOf="@+id/counterLikesTrip"
                    android:textColor="@color/secondaryText"
                    android:text="100 saved"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/actionTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/counterActionTrip"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_elements"
                android:paddingLeft="@dimen/space_elements"
                android:paddingRight="@dimen/space_elements"
                android:paddingTop="@dimen/space_elements"
                tools:ignore="DisableBaselineAlignment">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">
                    <ImageButton
                        android:id="@+id/likeActionTrip"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@drawable/selector"
                        style="@style/Custom.ImageButton"
                        />


                    <TextView
                        android:id="@+id/likeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Like"
                        android:textColor="@color/primaryText"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageButton
                        android:id="@+id/savedActionTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@drawable/selector_save"
                        style="@style/Custom.ImageButton"

                        tools:ignore="ContentDescription,RtlHardcoded" />

                    <TextView
                        android:id="@+id/saveText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Save"
                        android:textColor="@color/primaryText"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>