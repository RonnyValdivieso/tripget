<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
	android:layout_weight="1"
	android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
	    android:paddingBottom="5dp"
        android:paddingLeft="10dp"
	    android:textSize="16dp"
	    android:textStyle="bold"
        android:text="Guayaquil, buen trip" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
	    android:paddingBottom="10dp"
        android:paddingLeft="10dp"
	    android:textSize="14dp"
        android:text="Esta es una ciudad grande y tiene muchos centros comerciales. Uno que recomiendo es el San Marino Shopping, tiene
						una gran variedad de tiendas y su arquitectura es la mejor entre los centros comerciales locales." />

    <Button
        android:id="@+id/button2"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Read more" />

	<include layout="@layout/trip_needs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"></include>
</LinearLayout>