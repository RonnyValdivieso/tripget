<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backUserUpload"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new_york"
            android:contentDescription=""
            android:layout_marginTop="37dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:tint="#80000000"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:id="@+id/likes_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:paddingRight="@dimen/space_elements"
                    android:layout_gravity="center_vertical"
                    android:text="2K"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_favorite"
                    android:contentDescription=""
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <ImageView
                android:id="@+id/userimgCard"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginBottom="@dimen/space_section"
                android:src="@drawable/random_person"
                android:layout_gravity="center_horizontal"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/usernameCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/primaryBackground"
                android:paddingBottom="@dimen/space_elements"
                android:text="Pedro Ortiz"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/locationDateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryBackground"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="New York, Oct 2016"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/totalBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$2400"
                android:textAlignment="center"
                android:textColor="@color/primaryBackground"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>